<li id="micropost-<%= micropost.id %>" class="no-dot-list">
  <span id="avator"><%= link_to gravatar_for(micropost.user, size: 50), micropost.user %></span>
  <div class id="microposts_list">
  <span class="user"><%= link_to micropost.user.name, micropost.user %></span><br>
  <span class="content"><%= micropost.content %></span><br>
  <span class="timestamp">
    Posted <%= time_ago_in_words(micropost.created_at) %> ago.
    <% if current_user == micropost.user %>
      <%= link_to "delete", micropost, method: :delete,
                                       data: { confirm: "You sure?" } %>
    <% end %>
  </span>
  </div>
</li>