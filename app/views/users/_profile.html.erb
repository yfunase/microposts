<aside class="col-md-4">
<section class="user_info">
  <h1>
    <%= gravatar_for @user %>
  </h1><br>
  <h3>
      <%= @user.name %>
  </h3><br>
  <div>
    <%= @user.email %><br>
    <%= @user.company %><br>
    <%= @user.biography %><br>
    <% if current_user == @user %>
    <%= link_to "edit", edit_user_path(@user.id) %>
    <% end %><br>
    <button type="button" class="btn btn-default btn-large btn-block">
    <%= link_to "followings", followings_user_path(@user.id) %>
    </button>
    <button type="button" class="btn btn-default btn-large btn-block">
    <%= link_to "followers", followers_user_path(@user.id) %>
    </button>
  </div>
</section>
</aside>
