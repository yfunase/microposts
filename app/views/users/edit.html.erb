<h1>Edit your profile</h1>
<body>
  <div class = "row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @user do |f| %>

      <%= render 'form', f: f %>
    
   <%= f.label :biography %>
   <%= f.text_area :biography, class:"form-control", :size => "20x5"%>
    
    <%= f.submit "Edit my account", class: "btn btn-large btn-primary" %>
    <% end %>

    </div>
  </div>
</body>